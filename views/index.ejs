<%- include header %>

<% posts.forEach(function (post, index) { %>
    <div>
        <h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
        <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head"></a>
    </div>
    <p class="info">
        作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
        日期：<%= post.time.minute %>
        <% if (post.tags) {%>
        |
        标签:
            <% post.tags.forEach(function (tag, index) { %>
                <% if (tag) { %>
                    <a href="/tags/<%= tag %>" class="tag"><%= tag %></a>
                <% } %>
            <% }) %>
        <% } %>
    </p>
    <div class="post-content"><%- post.post %></div>
    <p class="info">阅读 : <%= post.pv ? post.pv : 0 %> | 评论 : <%= post.comments.length %></p>
<% }) %>



<%- include footer %>