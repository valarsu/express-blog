<%- include header %>
<form method="post">
    标题：<input type="text" name="title" value="<%= post.title %>" disabled="disabled"><br><br>
    标签 :
    <input type="text" name="tag1" value="<%= post.tags[0] %>" disabled="disabled">
    <input type="text" name="tag2" value="<%= post.tags[1] %>" disabled="disabled">
    <input type="text" name="tag3" value="<%= post.tags[2] %>" disabled="disabled"><br><br>
    正文：<br><br>
    <textarea name="post" cols="100" rows="20"><%= post.post %></textarea><br><br>
    <input type="submit" class="submit" value="保存修改">
</form>
<%- include footer %>